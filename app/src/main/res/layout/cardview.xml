<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardview_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/daylight2" />

            <ImageView

                android:id="@+id/sun_or_moon"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_alignBottom="@+id/time"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/timezone"
                android:background="#ffffff" />


            <ImageView

                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_date_range_black_48dp"
                android:id="@+id/calender" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cardview_background"
                android:layout_alignLeft="@+id/cardview_background"
                android:text="Current Time is "
                android:textColor="#000000"
                android:textSize="24dp"

                />

            <TextView
                android:id="@+id/timezone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/time"
                android:layout_alignParentStart="true"
                android:text="Chicago -9°C - 27°C "
                android:textColor="#000000"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/calender"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/calender"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="5dp"
                android:text="1"
                android:textSize="21dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>